<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_menu_height"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/icon_lg"
        android:layout_height="@dimen/icon_lg"
        app:tint="@color/alabaster"
        tools:srcCompat="@drawable/ic_home_outline_white"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        style="@style/TextDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/space_sm"
        android:layout_marginVertical="@dimen/space_xs"
        android:textColor="@color/alabaster"
        android:textSize="@dimen/text_sm"
        tools:text="Home Menu text"/>

</androidx.appcompat.widget.LinearLayoutCompat>